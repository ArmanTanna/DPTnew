@model IEnumerable<DPTnew.Models.Order>

@{
    ViewBag.Title = "Orders";
}
@section Scripts {
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link href="~/Content/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/buttons.flash.min.js"></script>
    <script src="~/Scripts/jszip.min.js"></script>
    <script src="~/Scripts/pdfmake.min.js"></script>
    <script src="~/Scripts/vfs_fonts.js"></script>
    <script src="~/Scripts/buttons.html5.min.js"></script>
    <script src="~/Scripts/buttons.print.min.js"></script>
    <script src="~/Scripts/jquery.highlight.js"></script>

    <script type="text/javascript">
        function format(d) {
            // `d` is the original data object for the row
            return '<table cellpadding="5" cellspacing="0" border="0" width="100%" style="padding-left:50px;">' +
                '<tr>' +
                    '<td><b>OrderNumber:</b></td>' +
                    '<td>' + d[12] + '</td>' +
                    '<td><b>OrderDate:</b></td>' +
                    '<td>' + d[13] + '</td>' +
                    '<td><b>Discount:</b></td>' +
                    '<td>' + d[14] + '</td>' +
                '</tr>' +
                '<tr>' +
                    '<td><b>Invoicer:</b></td>' +
                    '<td>' + d[15] + '</td>' +
                    '<td><b>InvoicedName:</b></td>' +
                    '<td>' + d[16] + '</td>' +
                    '<td><b>InvoicedNumber:</b></td>' +
                    '<td>' + d[17] + '</td>' +
                '</tr>' +
                '<tr>' +
                    '<td><b>NewRenawal:</b></td>' +
                    '<td>' + d[18] + '</td>' +
                    '<td><b>LineType:</b></td>' +
                    '<td>' + d[19] + '</td>' +
                    '<td><b>Currency:</b></td>' +
                    '<td>' + d[20] + '</td>' +
                '</tr>' +
                '<tr>' +
                    '<td><b>RequestDate:</b></td>' +
                    '<td>' + d[21] + '</td>' +
                    '<td><b>Status:</b></td>' +
                    '<td>' + d[22] + '</td>' +
                    '<td><b>Note:</b></td>' +
                    '<td>' + d[23] + '</td>' +
                '</tr>' +
                '</table>';
        }
        $(document).ready(function () {
            var myTable = $('#dptOrder').DataTable({
                dom: 'lBfrtip',
                buttons: [
                    {
                        extend: 'pdfFlash',
                        orientation: 'landscape',
                        pageSize: 'LEGAL'
                    },
                    'csv', 'excel'
                ],
                "columns": [
                    {
                        "className": 'details-control',
                        "orderable": false,
                        "data": null,
                        "defaultContent": ''
                    },
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, },
                    { "bVisible": false, }
                ],
                "columnDefs": [
                    { "className": "dt-center", "targets": "_all" }
                ],
                "order": [[1, 'asc']],
                "orderClasses": false,
            });

            new $.fn.dataTable.Buttons(myTable, {
                buttons: [
                    {
                        text: '@DPTnew.Localization.Resource.ButtonBook',
                        className: 'book',
                        action: function () {
                            $.post("/Order/Book", {
                                orderNumber: $("input[name=orderNumber]").val()
                            },
                            function (result) {
                                var $psw = $("#msg");
                                $psw.text("");
                                $psw.text(result);
                                var pwdDialogConfig = {
                                    modal: true,
                                    width: 400,
                                    height: result ? 250 : "auto",
                                    buttons: {
                                        OK: function () {
                                            $(this).dialog("close");
                                            window.open('', '_self').close();
                                            //location.reload();
                                        }
                                    }
                                };
                                $("#sysmsg-dialog").dialog(pwdDialogConfig);
                            });
                        },
                        enabled: "@ViewBag.ButtonBook.ToString().ToLower()" == "true"
                    },
                        {
                            text: '@DPTnew.Localization.Resource.ButtonCheck',
                            className: 'check',
                            action: function () {
                                $.post("/Order/Check", {
                                    orderNumber: $("input[name=orderNumber]").val()
                                },
                                function (result) {
                                    var $psw = $("#msg");
                                    $psw.text("");
                                    $psw.text(result);
                                    var pwdDialogConfig = {
                                        modal: true,
                                        width: 400,
                                        height: result ? 250 : "auto",
                                        buttons: {
                                            OK: function () {
                                                $(this).dialog("close");
                                                window.open('', '_self').close();
                                                //location.reload();
                                            }
                                        }
                                    };
                                    $("#sysmsg-dialog").dialog(pwdDialogConfig);
                                });
                            },
                            enabled: "@ViewBag.ButtonCheck.ToString().ToLower()" == "true"
                        },
                            {
                                text: '@DPTnew.Localization.Resource.ButtonReject',
                                className: 'reject',
                                action: function () {
                                    $.post("/Order/Reject", {
                                        orderNumber: $("input[name=orderNumber]").val()
                                    },
                                    function (result) {
                                        var $psw = $("#msg");
                                        $psw.text("");
                                        $psw.text(result);
                                        var pwdDialogConfig = {
                                            modal: true,
                                            width: 400,
                                            height: result ? 250 : "auto",
                                            buttons: {
                                                OK: function () {
                                                    $(this).dialog("close");
                                                    window.open('', '_self').close();
                                                    //location.reload();
                                                }
                                            }
                                        };
                                        $("#sysmsg-dialog").dialog(pwdDialogConfig);
                                    });
                                },
                                enabled: "@ViewBag.ButtonReject.ToString().ToLower()" == "true"
                            },
                            {
                                text: '@DPTnew.Localization.Resource.ButtonApprove',
                                className: 'approve',
                                action: function () {
                                    $.post("/Order/Approve", {
                                        orderNumber: $("input[name=orderNumber]").val()
                                    },
                                    function (result) {
                                        var $psw = $("#msg");
                                        $psw.text("");
                                        $psw.text(result);
                                        var pwdDialogConfig = {
                                            modal: true,
                                            width: 400,
                                            height: result ? 250 : "auto",
                                            buttons: {
                                                OK: function () {
                                                    $(this).dialog("close");
                                                    window.open('', '_self').close();
                                                    //location.reload();
                                                }
                                            }
                                        };
                                        $("#sysmsg-dialog").dialog(pwdDialogConfig);
                                    });
                                },
                                enabled: "@ViewBag.ButtonApprove.ToString().ToLower()" == "true"
                            }
                ]
            });

            myTable.buttons().container().insertBefore('#dptOrder_filter');

            // Add event listener for opening and closing details
            $('#dptOrder tbody').on('click', 'td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = myTable.row(tr);

                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    // Open this row
                    row.child(format(row.data())).show();
                    tr.addClass('shown');
                }
            });

        });
    </script>
}

