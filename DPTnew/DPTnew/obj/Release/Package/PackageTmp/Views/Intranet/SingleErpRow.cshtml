    <script type="text/javascript">
        $(document).ready(function () {
            if ($("input[name=activitydate]").val() == "0001-01-01") {
                var now = new Date();
                var month = (now.getMonth() + 1);
                var day = now.getDate();
                if (month < 10)
                    month = "0" + month;
                if (day < 10)
                    day = "0" + day;
                var today = now.getFullYear() + '-' + month + '-' + day;
                $("input[name=activitydate]").val(today);
            }
        });
